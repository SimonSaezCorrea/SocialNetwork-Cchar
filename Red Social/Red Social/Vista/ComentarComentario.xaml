<Window x:Class="Red_Social.ComentarComentario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Red_Social"
        mc:Ignorable="d"
        Title="ComentarComentario" Height="450" Width="529.75">
    <Grid>
        <Label Content="Crear Comentario" HorizontalAlignment="Left" Margin="200,18,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS"/>
        <Label Content="Contenido" HorizontalAlignment="Left" Margin="11,66,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS"/>
        <Button Name="Aceptar" Content="Aceptar" HorizontalAlignment="Left" Margin="10,389,0,0" VerticalAlignment="Top" Width="75" Click="Aceptar_Click" FontFamily="Comic Sans MS"/>
        <Button Name="Cancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="90,389,0,0" VerticalAlignment="Top" Width="75" FontFamily="Comic Sans MS" Click="Cancelar_Click"/>
        <TextBox Name="Contenido" HorizontalAlignment="Left" Height="204" Margin="11,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="501" AcceptsReturn="True"/>
    </Grid>
</Window>
